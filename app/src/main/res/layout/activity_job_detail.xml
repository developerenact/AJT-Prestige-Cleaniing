<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.JobDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetEnd="0dp"
        android:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001">

        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/orange">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:paddingTop="16dp"
                android:paddingRight="12dp"
                android:paddingBottom="8dp"
                android:src="@mipmap/back"
                android:tint="@color/white" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Job"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_notifications_none_black_24dp"
                android:tint="@color/white" />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/id_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id number / #2456321"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_number"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="6">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/address"
                android:drawablePadding="4dp"
                android:text="Del Amo Fashion Center Torrance, CA, United States"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                app:srcCompat="@mipmap/navigation" />
        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear"
            android:layout_marginTop="4dp"
            android:drawableLeft="@mipmap/cleaning"
            android:drawablePadding="4dp"
            android:text="Cleaning and Dusting"
            android:textColor="@color/white" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/desc"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:drawableLeft="@mipmap/calendar"
            android:drawablePadding="4dp"
            android:text="02-08-2019 | 08:00 AM"
            android:textColor="@color/white" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/date_time"
            android:layout_marginTop="20dp"
            android:layout_marginRight="8dp"
            android:text="Loreum ipsum is simply dummy text of the printing and typesetting industry. Loreum Ipsum has been the industry's standard dummy text ever since the 1500', when an unknown printer took a gallery of type and scrambled it to make a type book. it has survived not only five centuries."
            android:textColor="@color/white"
            android:textSize="13sp" />


    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/relative"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/approx_hour"
        android:layout_height="2dp"
        android:background="@color/grey"/>

    <View
        android:id="@+id/line2"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/relative"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toEndOf="@id/approx_hour"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="2dp"
        android:background="@color/grey"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/approx_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/clock"
        android:drawablePadding="4dp"
        android:paddingTop="6dp"
        android:layout_marginLeft="32dp"
        android:paddingLeft="8dp"
        android:layout_marginTop="16dp"
        android:paddingRight="8dp"
        android:paddingBottom="6dp"
        android:background="@drawable/empty_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relative"
        android:text="Approximation hours: 8 Hours"/>


    <androidx.recyclerview.widget.RecyclerView
        app:layout_constraintTop_toBottomOf="@id/approx_hour"
        android:id="@+id/task_recyclerview"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>


</androidx.constraintlayout.widget.ConstraintLayout>